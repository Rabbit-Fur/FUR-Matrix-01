#############################
# FUR SYSTEM – .env.example #
#############################

# === Flask & Server Settings ===
FLASK_SECRET= # Secret für Flask-Session (z. B. generieren mit: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=   # (Optional) identisch zu FLASK_SECRET, falls gebraucht
FLASK_ENV=production
DEBUG=false
PORT=8080
PORT2=3000
BASE_URL=https://fur-martix.up.railway.app/
SESSION_LIFETIME_MINUTES=1440

# === Datenbank & MongoDB ===
DATABASE_URL=sqlite:///fur.db
MONGODB_URI=mongodb+srv://<username>:<password>@<host>/furdb?retryWrites=true&w=majority&appName=FURdb
MONGO_URL=mongodb+srv://<username>:<password>@<host>/furdb?retryWrites=true&w=majority&appName=FURdb
MONGO_PASSWORD= # nur wenn im Code benötigt
MONGO_DB=furdb

# === GitHub, Railway, Logging ===
REPO_GITHUB=Rabbit-Fur/try
TOKEN_GITHUB_API= # Personal Access Token für API-Aufrufe
FUR_PAT=          # Personal Access Token (PAT) für spezielle FUR-Kommandos
RAILWAY_TOKEN=    # Railway-API-Token für CI/CD-Deploy
RAILWAY_PROJECT=fur-martix
LOGTAIL_TOKEN=    # Token für Logging bei Logtail (optional)

# === Discord Bot / Channels / Rollen ===
DISCORD_TOKEN=                  # Discord Bot Token
DISCORD_CLIENT_ID=              # Discord App Client ID
DISCORD_CLIENT_SECRET=          # Discord App Secret
DISCORD_GUILD_ID=               # Discord Guild (Server) ID
DISCORD_WEBHOOK_URL=            # (optional) Webhook für Discord-Nachrichten
DISCORD_REDIRECT_URI=https://fur-martix.up.railway.app/callback
ENABLE_DISCORD_BOT=true

PUBLIC_CHANNEL_ID=              # Channel-ID (z.B. für allgemeine Nachrichten)
EVENT_CHANNEL_ID=
REMINDER_CHANNEL_ID=
LEADERBOARD_CHANNEL_ID=
HOF_CHANNEL_ID=
ADMIN_ROLE_IDS=
R4_ROLE_IDS=
R3_ROLE_IDS=
REMINDER_ROLE_ID=

# === Reminder & Newsletter ===
ENABLE_CHANNEL_REMINDERS=false
REMINDER_DM_DELAY=1
REMINDER_DM_IMAGE_URL=/static/img/dm_default.png
ENABLE_NEWSLETTER_AUTOPILOT=true
NEWSLETTER_DM_DELAY=1

# === Google / Kalender / OAuth ===
GOOGLE_CLIENT_CONFIG=client_secret.json
GOOGLE_CLIENT_ID=
GOOGLE_PROJECT_ID=fur-sync
GOOGLE_CLIENT_SECRET=
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/v1/certs
GOOGLE_REDIRECT_URI=https://fur-martix.up.railway.app/oauth2callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.readonly
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar
GOOGLE_CALENDAR_ID=             # z.B. <id>@group.calendar.google.com
GOOGLE_SYNC_INTERVAL_MINUTES=2
GOOGLE_TOKEN_STORAGE_PATH=tokens/google_token.json
GOOGLE_CREDENTIALS_FILE=credentials/oauth_client.json

# === OpenAI & Codex ===
OPENAI_API_KEY=
CODEX_ENV_PYTHON_VERSION=3.11.12
CODEX_ENV_NODE_VERSION=20
CODEX_ENV_RUST_VERSION=1.87.0
CODEX_ENV_GO_VERSION=1.23.8
CODEX_ENV_SWIFT_VERSION=6.1

# === Weitere Pfade & Sonstiges ===
POSTER_OUTPUT_PATH=static/generated
ENV_FILE=.env

